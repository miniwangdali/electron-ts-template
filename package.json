{
  "name": "app",
  "version": "0.0.1",
  "description": "",
  "main": "dist/server/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development FORCE_COLOR=1 npm-run-all -l -p dev:client dev:server",
    "dev:client": "nodemon --watch src/client --exec \"npm run compile:client\"",
    "dev:server": "nodemon --watch src/server --exec \"npm run compile:server && electron .\"",
    "compile:client": "webpack --config ./configs/webpack/webpack.config.js",
    "compile:server": "tsc -p ./configs/tsconfigs/tsconfig.server.json"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "autoprefixer": "^9.8.4",
    "cross-env": "^7.0.2",
    "css-loader": "^6.7.3",
    "electron": "^9.0.5",
    "html-webpack-plugin": "^5.5.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^7.0.2",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.26.9",
    "sass-loader": "^9.0.0",
    "source-map-loader": "^1.0.1",
    "style-loader": "^1.2.1",
    "ts-loader": "^9.4.2",
    "typescript": "^3.9.6",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@types/node": "12.12.21",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "nodemonConfig": {
    "ext": "ts, tsx, js, jsx, scss, css, html, json",
    "ignore": [
      "test/*",
      "docs/*",
      "dist/*",
      "build",
      "webpack",
      "node_modules/*"
    ],
    "delay": "1000"
  }
}
